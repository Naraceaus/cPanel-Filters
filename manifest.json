{
  "manifest_version": 2,

  "name": "cPanel Filters",
  "description": "Generate cPanel URLS that match the filter on the page",
  "version": "1.2",
		"options_ui":{
			"page":"options.html",
			"chrome_style": true
		},
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
		"background":{
				"persistent": false,
				"scripts": ["start_up.js"]
		},
		"content_scripts": [
			{
					"matches": ["<all_urls>"],
					"js": ["pageload.js"],
					"run_at": "document_end"
			}
  ],
  "permissions": [
    "tabs",
				"storage"
  ]
}
